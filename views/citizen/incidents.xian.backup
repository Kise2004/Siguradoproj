{{> head}}
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<style>
  #incidentsMap { height: 500px; width: 100%; }
  .view-toggle button.active { background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; }
</style>
<body class="bg-gray-50 min-h-screen flex">
  <!-- Sidebar -->
  <aside class="w-64 bg-gradient-to-b from-green-600 to-emerald-600 text-white fixed h-full shadow-2xl z-50">
    <div class="p-6">
      <div class="flex items-center space-x-3 mb-8">
        <svg class="w-10 h-10 nav-logo" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <div>
          <h1 class="text-xl font-bold">SIGURADO</h1>
          <p class="text-xs opacity-75">Gloria, Oriental Mindoro</p>
        </div>
      </div>
      <nav class="space-y-3">
        <a href="/dashboard" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white hover:bg-opacity-20 transition">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"/></svg>
          <span>Dashboard</span>
        </a>
        <a href="/report-incident" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white hover:bg-opacity-20 transition">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd"/></svg>
          <span>Report Incident</span>
        </a>
        <a href="/incidents" class="flex items-center space-x-3 px-4 py-3 rounded-lg bg-white bg-opacity-20 hover:bg-opacity-30 transition">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/></svg>
          <span>Incidents</span>
        </a>
        <a href="/barangays" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white hover:bg-opacity-20 transition">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/></svg>
          <span>Barangays</span>
        </a>
        <a href="/responders" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white hover:bg-opacity-20 transition">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/></svg>
          <span>Responders</span>
        </a>
        <a href="/resources" class="flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white hover:bg-opacity-20 transition">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"/></svg>
          <span>Resources</span>
        </a>
        <a href="/logout" class="flex items-center space-x-3 px-4 py-3 rounded-lg bg-red-500 bg-opacity-80 hover:bg-opacity-100 transition mt-8">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd"/></svg>
          <span>Logout</span>
        </a>
      </nav>
    </div>
  </aside>

  <div class="flex-1 ml-64 flex flex-col min-h-screen">
    <div class="flex-1 p-8">
    <script>
      {{#if success_msg}}
        Swal.fire({ icon: 'success', title: 'Success!', text: '{{success_msg}}', confirmButtonColor: '#2563eb', timer: 3000 });
      {{/if}}
    </script>

    <div class="flex justify-between items-center mb-6">
      <div class="flex items-center gap-3">
        <svg class="w-8 h-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <h2 class="text-3xl font-bold text-gray-800">Incident Reports</h2>
      </div>
      <a href="/report-incident" class="bg-gradient-to-r from-red-500 to-orange-500 text-white px-6 py-3 rounded-lg hover:scale-105 transition-transform shadow-lg flex items-center gap-2">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"/>
        </svg>
        Report New Incident
      </a>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <table class="w-full">
        <thead class="bg-gray-200">
          <tr>
            <th class="px-4 py-3 text-left">ID</th>
            <th class="px-4 py-3 text-left">Type</th>
            <th class="px-4 py-3 text-left">Severity</th>
            <th class="px-4 py-3 text-left">Location</th>
            <th class="px-4 py-3 text-left">Barangay</th>
            <th class="px-4 py-3 text-left">Status</th>
            <th class="px-4 py-3 text-left">Reported</th>
            <th class="px-4 py-3 text-left">Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each incidents}}
            <tr class="border-b hover:bg-gray-50">
              <td class="px-4 py-3">{{this.id}}</td>
              <td class="px-4 py-3">
                <span class="capitalize">{{this.type}}</span>
              </td>
              <td class="px-4 py-3">
                <span class="px-2 py-1 rounded text-xs
                  {{#if (eq this.severity 'critical')}}status-critical{{/if}}
                  {{#if (eq this.severity 'high')}}status-high{{/if}}
                  {{#if (eq this.severity 'medium')}}status-medium{{/if}}
                  {{#if (eq this.severity 'low')}}status-low{{/if}}
                ">
                  {{this.severity}}
                </span>
              </td>
              <td class="px-4 py-3">{{this.location}}</td>
              <td class="px-4 py-3">{{this.barangay.name}}</td>
              <td class="px-4 py-3">
                <span class="px-2 py-1 rounded text-xs capitalize
                  {{#if (eq this.status 'reported')}}bg-blue-500 text-white{{/if}}
                  {{#if (eq this.status 'verified')}}bg-yellow-500 text-white{{/if}}
                  {{#if (eq this.status 'responding')}}bg-orange-500 text-white{{/if}}
                  {{#if (eq this.status 'resolved')}}bg-green-500 text-white{{/if}}
                  {{#if (eq this.status 'closed')}}bg-gray-500 text-white{{/if}}
                ">
                  {{this.status}}
                </span>
              </td>
              <td class="px-4 py-3">{{this.reportedAt}}</td>
              <td class="px-4 py-3">
                <a href="/incidents/{{this.id}}" class="text-green-600 hover:underline flex items-center gap-1">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                  </svg>
                  View
                </a>
              </td>
            </tr>
          {{else}}
            <tr>
              <td colspan="8" class="px-4 py-8 text-center text-gray-500">
                No incidents reported yet.
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    
    <!-- Map View Container -->
    <div id="mapViewContainer" class="bg-white rounded-lg shadow-md p-6" style="display: none;">
      <div id="incidentsMap"></div>
    </div>
    
    </div>
    {{> footer}}
  </div>

  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script>
    let map = null;
    const incidents = {{{json incidents}}};
    
    function showListView() {
      document.getElementById('listView').style.display = 'block';
      document.getElementById('mapViewContainer').style.display = 'none';
      document.getElementById('listViewBtn').classList.add('active');
      document.getElementById('mapViewBtn').classList.remove('active');
    }
    
    function showMapView() {
      document.getElementById('listView').style.display = 'none';
      document.getElementById('mapViewContainer').style.display = 'block';
      document.getElementById('listViewBtn').classList.remove('active');
      document.getElementById('mapViewBtn').classList.add('active');
      
      if (!map) {
        initializeMap();
      }
    }
    
    function initializeMap() {
      // Center on Gloria, Oriental Mindoro (approximate coordinates)
      map = L.map('incidentsMap').setView([13.0, 121.5], 11);
      
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: 'Â© OpenStreetMap contributors'
      }).addTo(map);
      
      // Add markers for each incident
      {{#each incidents}}
        {{#if this.latitude}}
          const marker{{this.id}} = L.marker([{{this.latitude}}, {{this.longitude}}]).addTo(map);
          marker{{this.id}}.bindPopup(`
            <div class="p-2">
              <h3 class="font-bold text-lg">{{this.type}}</h3>
              <p class="text-sm"><strong>Severity:</strong> {{this.severity}}</p>
              <p class="text-sm"><strong>Status:</strong> {{this.status}}</p>
              <p class="text-sm"><strong>Location:</strong> {{this.location}}</p>
              <a href="/incidents/{{this.id}}" class="text-green-600 hover:underline text-sm">View Details</a>
            </div>
          `);
        {{/if}}
      {{/each}}
      
      setTimeout(() => { map.invalidateSize(); }, 100);
    }
  </script>
